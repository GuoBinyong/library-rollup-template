{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "ScriptHost"
    ],
    "declaration": true,
    "downlevelIteration": true,
    "rootDirs": [
      "src",
      "types"
    ],
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule":true,
    "esModuleInterop": true
  },
  "exclude": [
    "dist",
    "dev"
  ]
}